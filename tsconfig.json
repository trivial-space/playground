{
	"compilerOptions": {
		"target": "es6",
		"lib": [
			"esnext",
			"dom",
			"es2018"
		],
		"module": "es6",
		"moduleResolution": "node",
		"strict": true,
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"*": [ "*", "src/*", "node_modules/*" ]
		}
	},
	"exclude": [
		"src/flow",
		"node_modules",
		"libs",
		"libs/flow/node_modules",
		"libs/flow/test",
		"libs/flow-tools/node_modules",
		"libs/flow-tools/examples",
		"libs/flow-tools/dist/examples",
		"libs/painter/node_modules",
		"libs/painter/examples",
		"libs/libs/node_modules",
		"libs/libs/node_modules/@types",
		"libs/libs/spec"
	],
	"compileOnSave": false,
	"buildOnSave": false,
	"atom": {
		"rewriteTsconfig": false
	}
}
