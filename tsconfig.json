{
	"compilerOptions": {
		"target": "es5",
		"lib": [
			"es2015",
			"es2016",
			"es2017",
			"dom"
		],
		"module": "es6",
		"moduleResolution": "node",
		"strict": true,
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowSyntheticDefaultImports": true,
		"removeComments": true,
		"allowJs": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"*": [
				"src/*",
				"libs/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"libs/tvs-flow/node_modules",
		"libs/tvs-flow/test",
		"libs/tvs-flow-tools/node_modules",
		"libs/tvs-flow-tools/examples",
		"libs/tvs-flow-tools/dist/examples",
		"libs/tvs-renderer/node_modules",
		"libs/tvs-renderer/examples",
		"libs/tvs-libs/node_modules",
		"libs/tvs-libs/spec",
		"src/tiles"
	],
	"compileOnSave": false,
	"buildOnSave": false,
	"atom": {
		"rewriteTsconfig": false
	}
}
